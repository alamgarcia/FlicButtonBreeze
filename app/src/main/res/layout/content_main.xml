<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/scrollView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:overScrollMode="always" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/guideline4"
                app:layout_constraintBottom_toTopOf="@+id/guideline16" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linearLayout2">
            <TextView
                    android:text="EndPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/endpoint_label_txt"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/endpoint_txt"/>
            <TextView
                    android:text="Event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/event_label" android:textSize="24sp"
                    android:gravity="center|center_vertical"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/family_label"
                    android:text="@string/family_lbl_text"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/family_txt"/>
            <TextView
                    android:text="@string/type_lbl_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/type_label"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/type_txt"/>
            <TextView
                    android:text="@string/version_lbl_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/version_label"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/version_txt"/>
            <TextView
                    android:text="EventBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="24sp"
                    android:gravity="center|center_vertical"/>
            <TextView
                    android:text="nombreAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/email_label"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/email_txt"/>
            <TextView
                    android:text="numerosParticipantes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/param1_label"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/param1_txt"/>
            <TextView
                    android:text="bridgePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/param2_label"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/param2_txt"/>
            <TextView
                    android:text="bridgeId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/param3_label"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/param3_txt"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/save_btn"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>